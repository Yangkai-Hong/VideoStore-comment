@model VideoStore.WebClient.ViewModels.CatalogueViewModel

@{
    ViewBag.Title = "ListMedia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Media</h2>
<hr />

<table>  
    @foreach (var item in Model.Items)
    {
        <tr>
            <th>
                 @Html.ActionLink(item.Title, "Details", new { media = item.Id }) 
            </th>
            <td> Price: $@item.Price </td>
            <td> Quantity: @item.StockCount </td>   
            <td> @using (Html.BeginForm("AddToCart", "Cart"))
                {
                    @Html.Hidden("pMediaId", item.Id)
                    @Html.Hidden("pReturnUrl", ViewContext.HttpContext.Request.Url.PathAndQuery)
                    <input type="submit" value="+ Add to Cart" />
                } 
            </td>
        </tr>
    }

</table>

